<nav class="nav-bar">
    <div class="logo">
        <h1>GradeManager</h1>
    </div>
    <ul class="nav-links">
        <li><a href="#hero">Accueil</a></li>
        <li><a href="#about">À propos</a></li>
        <li><a href="#features">Fonctionnalités</a></li>
        <li><a href="#contact">Contact</a></li>
        <li>
            <button class="btn-login" onclick="openLoginModal()">Se Connecter</button>
        </li>
    </ul>

    <div class="settings">
        <select id="languageSelector">
            
            
            <option value="fr" selected>🇫🇷 FR</option> <!-- Option française par défaut -->
            <option value="en">🇬🇧 EN</option>
            <option value="es">🇪🇸 ES</option>
        </select>
    </div>

    <script>

        // Automatically select the French option on page load
        document.addEventListener('DOMContentLoaded', function() {
            const languageSelector = document.getElementById('languageSelector');
            languageSelector.value = 'fr'; // Définit le français comme langue par défaut
        });

        document.getElementById('languageSelector').addEventListener('change', function() {
            const selectedLanguage = this.value;

            // Define the pages for each language
            const languagePages = {
                en: '/home-en', // English page
                es: '/home-es', // Spanish page
                fr: '/', // French page
            };

            // Redirect to the corresponding page
            window.location.href = languagePages[selectedLanguage];
        });
    </script>

</nav>

<style>
   

    .nav-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 40px;
        background-color: rgba(0, 0, 0, 0.4);
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    .logo h1 {
        margin: 0;
        font-size: 1.8rem;
        color: #fff;
    }

    .nav-links {
        list-style: none;
        display: flex;
        gap: 20px;
        margin: 0;
        padding: 0;
    }

        .nav-links li {
            display: flex;
            align-items: center;
        }

        .nav-links a {
            text-decoration: none;
            color: #fff;
            font-size: 1rem;
            transition: color 0.3s ease;
        }

            .nav-links a:hover {
                color: #d1c4e9;
            }

    .btn-login {
        background-color: #6a0dad;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-login:hover {
            background-color: #7b1fa2;
            transform: scale(1.05);
        }

    .settings {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .settings button, .settings select {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 1.2rem;
            color: #fff;
        }

        .settings select {
            background-color: #6a0dad;
            padding: 5px 10px;
            border-radius: 4px;
        }

    /* Mode sombre */
    .dark-mode {
        background-color: #121212;
        color: white;
    }

    /* Mode clair */
    .light-mode {
        background-color: white;
        color: black;
    }

</style>
@code {
    [Inject] NavigationManager Navigation { get; set; }

    private bool isDarkMode = false;
    private string selectedLanguage = "fr";

    private Dictionary<string, Dictionary<string, string>> translations = new()
    {
        { "fr", new Dictionary<string, string> { {"home", "Accueil"}, {"about", "À propos"}, {"features", "Fonctionnalités"}, {"contact", "Contact"}, {"login", "Se Connecter"} } },
        { "en", new Dictionary<string, string> { {"home", "Home"}, {"about", "About"}, {"features", "Features"}, {"contact", "Contact"}, {"login", "Login"} } },
        { "es", new Dictionary<string, string> { {"home", "Inicio"}, {"about", "Acerca de"}, {"features", "Características"}, {"contact", "Contacto"}, {"login", "Iniciar sesión"} } }
    };

    private Dictionary<string, string> currentTexts = new();

    protected override void OnInitialized()
    {
        ChangeLanguage();
    }

    private void ToggleTheme()
    {
        isDarkMode = !isDarkMode;
        var themeClass = isDarkMode ? "dark-mode" : "light-mode";
       
    }

    private void ChangeLanguage()
    {
        currentTexts = translations[selectedLanguage];
    }
}