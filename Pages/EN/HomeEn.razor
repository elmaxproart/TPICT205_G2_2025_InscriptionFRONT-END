        </form>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2025 GradeManager. All rights reserved.</p>
    </footer>

    <!-- AOS JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
