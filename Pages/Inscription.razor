<script>
      $(document).ready(function () {
        var apiUrl = "https://localhost:7066/api/UE";

        // Fonction pour charger les UEs sans recharger la page
        function chargerUEs() {
            $("#UeIds").empty(); // Vide la liste avant de la recharger
            $("#loadingIndicator").show(); // Affiche le spinner de chargement

            $.ajax({
                url: apiUrl,
                type: "GET",
                dataType: "json",
                success: function (data) {
                    console.log("Données reçues :", data);

                    if (data && data.length > 0) {
                        $.each(data, function (index, ue) {
                            $("#UeIds").append(
                                `<option value="${ue.id}">${ue.libelle} (Coef: ${ue.coef})</option>`
                            );
                        });
                    } else {
                        $("#UeIds").append('<option disabled>Aucune UE disponible</option>');
                    }

                    $("#loadingIndicator").hide(); // Masque le spinner une fois les données chargées
                },
                error: function (xhr, status, error) {
                    console.error("Erreur AJAX :", status, error);
                    $("#UeIds").append('<option disabled>Erreur lors du chargement</option>');
                    $("#loadingIndicator").hide(); // Masque le spinner en cas d'erreur
                }
            });
        }

        // Chargement initial des UEs
        chargerUEs();

