        .sidebar.closed {
            width: 80px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

            .sidebar ul li {
                padding: 15px;
                display: flex;
                align-items: center;
                cursor: pointer;
                transition: background 0.3s, box-shadow 0.3s;
                background: linear-gradient(135deg, #2f2f3b); 
            
            }

